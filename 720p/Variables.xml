<includes>
    <!-- Overlay variable -->
    <variable name="overlayIcon">
        <value condition="[[!ListItem.IsResumable + !StringCompare(ListItem.PlayCount, )] | [ListItem.IsResumable + !StringCompare(ListItem.PlayCount, ) + Skin.HasSetting(DisableInProgress)]]">$INFO[ListItem.Overlay]</value>
        <value condition="ListItem.IsResumable + [[!Skin.HasSetting(DisableInProgress) + !StringCompare(ListItem.PlayCount, )] | [Skin.HasSetting(DisableInProgress) + StringCompare(ListItem.PlayCount, )] | [!Skin.HasSetting(DisableInProgress) + StringCompare(ListItem.PlayCount, )]]">OverlayWatching.png</value>
    </variable>
    <!-- cases -->
    <variable name="mediaCases">
        <value condition="![stringcompare(ListItem.VideoResolution,720) | stringcompare(ListItem.VideoResolution,1080) | stringcompare(ListItem.VideoResolution,540)] + [[Skin.HasSetting(showBigposterCases) + !Skin.HasSetting(showBigposterClearCases)] | [Skin.HasSetting(showCases) + !Skin.HasSetting(showClearCases)]]">special://skin/extras/flagging/cases/dvd.png</value>
        <value condition="[[stringcompare(ListItem.VideoResolution,720) | stringcompare(ListItem.VideoResolution,1080)] + !substring(listitem.filename,3D) + !stringcompare(ListItem.VideoResolution,540)] + [[Skin.HasSetting(showBigposterCases) + !Skin.HasSetting(showBigposterClearCases)] | [Skin.HasSetting(showCases) + !Skin.HasSetting(showClearCases)]]">special://skin/extras/flagging/cases/bluray.png</value>
        <value condition="[[stringcompare(ListItem.VideoResolution,720) | stringcompare(ListItem.VideoResolution,1080)] + substring(listitem.filename,3D) + !stringcompare(ListItem.VideoResolution,540)] + [[Skin.HasSetting(showBigposterCases) + !Skin.HasSetting(showBigposterClearCases)] | [Skin.HasSetting(showCases) + !Skin.HasSetting(showClearCases)]]">special://skin/extras/flagging/cases/3dbluraycase3.png</value>
        <value condition="stringcompare(ListItem.VideoResolution,540) + [[Skin.HasSetting(showBigposterCases) + !Skin.HasSetting(showBigposterClearCases)] | [Skin.HasSetting(showCases) + !Skin.HasSetting(showClearCases)]]">special://skin/extras/flagging/cases/hddvd.png</value>
        <!-- clearcases -->
        <value condition="![stringcompare(ListItem.VideoResolution,720) | stringcompare(ListItem.VideoResolution,1080) | stringcompare(ListItem.VideoResolution,540)] + [[Skin.HasSetting(showBigposterCases) + Skin.HasSetting(showBigposterClearCases) ] | [Skin.HasSetting(showCases) + Skin.HasSetting(showClearCases)]]">special://skin/extras/flagging/cases/dvd-clear.png</value>
        <value condition="[[stringcompare(ListItem.VideoResolution,720) | stringcompare(ListItem.VideoResolution,1080)] + !substring(listitem.filename,3D) + !stringcompare(ListItem.VideoResolution,540)] + [[Skin.HasSetting(showBigposterCases) + Skin.HasSetting(showBigposterClearCases)] | [Skin.HasSetting(showCases) + Skin.HasSetting(showClearCases)]]">special://skin/extras/flagging/cases/bluray-clear.png</value>
        <value condition="[[stringcompare(ListItem.VideoResolution,720) | stringcompare(ListItem.VideoResolution,1080)] + substring(listitem.filename,3D) + !stringcompare(ListItem.VideoResolution,540)] + [[Skin.HasSetting(showBigposterCases) + Skin.HasSetting(showBigposterClearCases)] | [Skin.HasSetting(showCases) + Skin.HasSetting(showClearCases)]]">special://skin/extras/flagging/cases/3dbluray-clear.png</value>
        <value condition="stringcompare(ListItem.VideoResolution,540) + [[Skin.HasSetting(showBigposterCases) + !Skin.HasSetting(showBigposterClearCases)] | [Skin.HasSetting(showCases) + !Skin.HasSetting(showClearCases)]]">special://skin/extras/flagging/cases/hddvd-clear.png</value>
    </variable>
</includes>