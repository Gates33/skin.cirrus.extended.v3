                <posx>0</posx>
                <posy>0</posy>
                <width>250</width>
                <height>35</height>
                <texture border="0,0,32,0">header.png</texture>
            </control>
            <control type="label" id="29">
                <include>WindowTitleCommons</include>
                <posx>220</posx>
            </control>
        </control>
        <control type="group">
